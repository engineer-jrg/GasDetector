{{#if user }}
  <div class="text-center">
      <h1 class="d-inline text-muted mt-2 mb-0">Bienvenido </h1>     
      <a href="#" class="h1 text-secondary">{{ user.name }}</a>
      <a href="#" class="text-primary d-block">editar</a>
  </div>
{{/if}}

<div class="d-flex justify-content-center">
    <div class="card mt-2" style="width: 75%;">
        <div class="card-header">
        <h3 class="card-title">
            <font style="vertical-align: inherit;">
                <font style="vertical-align: inherit;">GasDetector</font>
            </font>
        </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
            <li data-target="##carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="##carouselExampleIndicators" data-slide-to="1" class=""></li>
            <li data-target="##carouselExampleIndicators" data-slide-to="2" class=""></li>
            </ol>
            <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/img/carousel/carrusel_1_900x500.png" alt="Primera diapositiva">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/carousel/carrusel_2_900x500.png" alt="Segunda diapositiva">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/img/carousel/carrusel_3_900x500.png" alt="Tercera diapositiva">
            </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Anterior</font></font></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">próximo</font></font></span>
            </a>
        </div>
        <h5 class="card-title mt-2">Detector de Gases</h5>
        <p class="card-text">El detector de gases es un poyecto de la universidad de pamplona, fue creado y 
            llevado a cabo por el ingeniero electrónico Julian Arias.</p>
        <a href="#" class="btn btn-primary stretched-link">Saber mas+</a>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>

{{#if user }}
    <div class="text-center">
        <div class="alert alert-default-info d-inline-block">
            <span>Ya estas registrad@, empieza a tomar 
                <a href="#" class="stretched-link text-primary">mediciones</a> .
            </span>
        </div>
    </div>
{{else }}
    <div class="text-center">
        <div class="alert alert-default-info d-inline-block">
            <span>Aún no estas registrado, 
              <a href="/users/signup" class="stretched-link text-primary">regístrate</a>
                ahora para tener todas las funciones.
            </span>
        </div>
    </div>
{{/if}}

<div style="margin-bottom: 70px;"></div>
